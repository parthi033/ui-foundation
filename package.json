{
  "name": "@parthi033/ui-foundation",
  "version": "0.2.3",
  "description": "A lightweight, framework-agnostic Web Components library built with Stencil",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ui-foundation/ui-foundation.esm.js",
  "exports": {
    ".": {
      "import": "./dist/ui-foundation/ui-foundation.esm.js",
      "require": "./dist/ui-foundation/ui-foundation.cjs.js"
    },
    "./dist/components/*": {
      "import": "./dist/components/*",
      "types": "./dist/components/*"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parthi033/ui-foundation.git"
  },
  "keywords": [
    "web-components",
    "stencil",
    "ui-library",
    "component-library",
    "design-system",
    "accessible",
    "ada-compliant",
    "wcag",
    "dark-mode",
    "theming",
    "custom-elements",
    "framework-agnostic",
    "react",
    "angular",
    "vue"
  ],
  "files": [
    "dist/",
    "loader/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "deploy": "npm run build && sed -i '' 's|href=\"/|href=\"./|g;s|src=\"/|src=\"./|g;s|url(\"/|url(\"./|g;s|data-resources-url=\"/|data-resources-url=\"./|g;s|logo=\"/|logo=\"./|g' www/index.html && gh-pages -d www"
  },
  "devDependencies": {
    "@stencil/core": "^4.27.1",
    "@stencil/sass": "^3.2.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0"
  },
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0"
  }
}
